{
  "name": "backend",
  "version": "1.0.0",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node app.js",
    "dev": "nodemon app.js --ignore uploads/",
    "dev:watch": "nodemon app.js --ignore uploads/ --watch . --ext js,json",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop ecosystem.config.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.cjs",
    "pm2:reload": "pm2 reload ecosystem.config.cjs",
    "pm2:delete": "pm2 delete ecosystem.config.cjs",
    "pm2:start:esm": "pm2 start ecosystem.config.mjs",
    "pm2:logs": "pm2 logs nayon-server",
    "pm2:monitor": "pm2 monit",
    "setup:production": "npm run setup:logs && npm run pm2:start",
    "setup:logs": "mkdir -p logs && touch logs/app.log logs/error.log",
    "health": "curl http://localhost:5000/health",
    "monitor": "node scripts/monitor.js",
    "cluster": "node cluster.js"
  },
  "keywords": [
    "express",
    "nodejs",
    "mern",
    "auto-restart",
    "production"
  ],
  "author": "",
  "license": "ISC",
  "description": "Auto-restarting MERN stack server with comprehensive error handling",
  "devDependencies": {
    "nodemon": "^3.1.9"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.0",
    "bcrypt": "^5.1.1",
    "chalk": "^5.6.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "figlet": "^1.7.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.5",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.16",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pm2": "^6.0.11",
    "socket.io": "^4.7.5",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/*",
      "uploads/*",
      "logs/*",
      "*.log"
    ],
    "delay": 2000,
    "env": {
      "NODE_ENV": "development"
    }
  }
}
